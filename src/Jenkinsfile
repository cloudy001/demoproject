pipeline {
    agent any

    stages {
        stage('Compile Stage') {
            steps {
                withGradle() {
                sh './gradlew -v'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing....'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying........'
            }
        }
    }
}