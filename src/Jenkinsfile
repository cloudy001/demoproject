pipeline {
    agent any

    stages {
        stage('Compile Stage') {
            steps {
                WithGradle(){
                sh './gradlew -v'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}