pipeline {
    agent any
    tools {
    gradle 'gradle-7.3'
    }
    stages {
        stage('Compile Stage') {
            steps {
                  echo 'executing gradle....'
                sh './gradlew -v'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing....'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying........'
            }
        }
    }
}